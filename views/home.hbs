    <img src="https://i.ytimg.com/vi/Hq-8pZeb0d4/hqdefault.jpg"
  </div>
  <div class="mdl-dialog__actions">
    <button type="button" class="mdl-button close">Okay...</button>
  </div>
</dialog>

